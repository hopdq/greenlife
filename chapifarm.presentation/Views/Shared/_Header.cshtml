                        </a>
                        <ul class="sub-menu" data-bind="if: hasChild">
                            <!-- ko foreach: children -->
                            <li>
                                <a data-bind="attr: { href: url, title: name }, text: name"></a>
                            </li>
                            <!-- /ko -->
                        </ul>
                    </li>
                    <!-- /ko -->
                    <li class="fixed-search hidden-xs">
                        <div class="btn-group">
                            <button type="button" class="dropdown-toggle icon-search" data-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-search "></i>
                            </button>
                            <div class="dropdown-menu" role="menu">
                                <div class="search-bar">
                                    <form action="/search">
                                        <input type="hidden" name="type" value="product">
                                        <input type="text" name="q" placeholder="Bạn đang tìm...">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
                <ul class="top-cart col-sm-1  pull-right" data-bind="with:cart">
                    <li class="top-cart-toogle">
                        <a href="/cart">
                            <span class="count" data-bind="text:totalProduct"></span>
                        </a>
                        <div class="cart_toogleshow">
                            <div class="cartshow">
                                <!-- ko foreach: orderLine -->
                                <div class="line-item clearfix original">
                                    <div class="item_image">
                                        <a data-bind="attr: {href:orderLine().product().url()}">
                                            <img data-bind="attr: {src:orderLine().product().imgPath()}">
                                        </a>
                                    </div>
                                    <div class="cart-item-info">
                                        <a href="" class="text-capitalize">
                                            <strong data-bind="text:orderLine().product().name()"></strong>
                                            <span class="variant_title"></span>
                                        </a><br>
                                        <span class="price text-capitalize" data-bind="text:orderLine().product().price()"></span><br>
                                        <div class="quantity">
                                            <i class="fa fa-times remove" aria-hidden="true" data-bind="click:cart().remove(orderLine)"></i>
                                            <strong>Số lượng:</strong>&nbsp;&nbsp;
                                            <i class="fa fa-minus" aria-hidden="true" data-bind="click:orderLine().increase()"></i>
                                            <input type="number" size="4" min="1" id="" data-bind="value: orderLine().productCount()">
                                            <i class="fa fa-plus" aria-hidden="true" data-bind="click:orderLine().decrease()"></i>
                                        </div>
                                    </div>
                                </div>
                                <!-- /ko -->

                                <div class="line-item text-center clearfix" data-bind="if:noneProduct">
                                    <p>Bạn chưa có sản phẩm nào trong giỏ hàng</p>
                                </div>

                            </div>
                            <div class="total-price text-capitalize">
                                <span class="pull-left">Tổng tiền:</span>
                                <span class="total_price_topcart pull-right"><span data-bind="text: totalPrice"></span>₫</span>
                            </div>
                            <a href="/checkout" class="checkout_topcart">ĐẶT MUA</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>

</section>
