<section class="header-container" data-bind="with: header">
    <div id="topbar">
        <div class="container">
            <div class="row">
                <ul class="top-info col-sm-4 ">
                    <li><a href="http://caudatfarm.com/">Sản phẩm từ NÔNG TRẠI</a></li>
                    <li><a href="/"></a></li>
                </ul>
                <ul class="top-callcenter col-md-7 col-sm-8 hidden-xs">
                    <li class="hotline" data-bind="text:hotLine"></li>
                    <li class="open-time" data-bind="text:openTime"></li>
                </ul>
                <ul class="top-cart col-sm-1  pull-right" data-bind="with:cart">
                    <li class="top-cart-toogle">
                        <a href="/cart">
                            <span class="count" data-bind="text:totalProduct"></span>
                        </a>
                        <div class="cart_toogleshow">
                            <div class="cartshow">
                                <!-- ko foreach: orderLine -->
                                <div class="line-item clearfix original">
                                    <div class="item_image">
                                        <a data-bind="attr: {href:orderLine().product().url()}">
                                            <img data-bind="attr: {src:orderLine().product().imgPath()}">
                                        </a>
                                    </div>
                                    <div class="cart-item-info">
                                        <a href="" class="text-capitalize">
                                            <strong data-bind="text:orderLine().product().name()"></strong>
                                            <span class="variant_title"></span>
                                        </a><br>
                                        <span class="price text-capitalize" data-bind="text:orderLine().product().price()"></span><br>
                                        <div class="quantity">
                                            <i class="fa fa-times remove" aria-hidden="true" data-bind="click:cart().remove(orderLine)"></i>
                                            <strong>Số lượng:</strong>&nbsp;&nbsp;
                                            <i class="fa fa-minus" aria-hidden="true" data-bind="click:orderLine().increase()"></i>
                                            <input type="number" size="4" min="1" id="" data-bind="value: orderLine().productCount()">
                                            <i class="fa fa-plus" aria-hidden="true" data-bind="click:orderLine().decrease()"></i>
                                        </div>
                                    </div>
                                </div>
                                <!-- /ko -->

                                <div class="line-item text-center clearfix" data-bind="if:noneProduct">
                                    <p>Bạn chưa có sản phẩm nào trong giỏ hàng</p>
                                </div>

                            </div>
                            <div class="total-price text-capitalize">
                                <span class="pull-left">Tổng tiền:</span>
                                <span class="total_price_topcart pull-right"><span data-bind="text: totalPrice"></span>₫</span>
                            </div>
                            <a href="/checkout" class="checkout_topcart">ĐẶT MUA</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div id="header-main">
        <div class="container">
            <div class="row">
                <div class="col-xs-3 visible-xs">
                    <button type="button" class="navbar-toggle pull-left toggle-mobile-menu">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="col-sm-4 col-xs-9">
                    <div class="logo">
                        <a href="http://caudatfarm.com" title="Cầu Đất Farm - Nông Trại từ Đà Lạt">
                            <img src="~/Content/images/logo.png" alt="logo" class="img-responsive">
                        </a>
                    </div>
                </div>
                <div class="col-sm-6 col-xs-12">
                    <form id="search_form" action="/search" method="get" class="header-search">
                        <div class="input-group">
                            <input type="hidden" name="type" value="product">
                            <input type="text" name="q" autocomplete="off" class="form-control" value="" placeholder="Tìm kiếm sản phẩm, danh mục...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <i class="fa fa-search "></i>
                                </button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div id="header-menu" class="hidden-xs">
        <div class="container">
            <nav id="main-menu">
                <ul>
                    <li class="home"><a href="/" title="home"><i class="fa fa-home" aria-hidden="true"></i></a></li>
                    <!-- ko foreach: navigation -->
                    <li data-bind="attr: { class: hasSubClass }">
                        <a data-bind="attr: { href: url, title: name }" class="">
                            <span data-bind="text: name"></span>
                        </a>
                        <ul class="sub-menu" data-bind="if: hasChild">
                            <!-- ko foreach: children -->
                            <li>
                                <a data-bind="attr: { href: url, title: name }, text: name"></a>
                            </li>
                            <!-- /ko -->
                        </ul>
                    </li>
                    <!-- /ko -->
                </ul>
            </nav>
        </div>
    </div>
    <div class="header-fixed">
        <div class="container">
            <div class="row">
                <div class="col-sm-1 col-xs-2 hidden-lg hidden-md pull-left">
                    <button type="button" class="navbar-toggle pull-left toggle-mobile-menu">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="col-sm-10 col-xs-8 hidden-lg hidden-md logo_mb_hf">
                    <a href="/" title="home">	<img src="//hstatic.net/704/1000059704/1000177804/logo.png?v=1072" alt="logo" class="img-responsive"></a>
                </div>
                <ul class="fixed-bar col-md-11 hidden-sm hidden-xs pull-left">
                    <li class="home"><a href="/" title="home">	<img src="//hstatic.net/704/1000059704/1000177804/logo.png?v=1072" alt="logo" class="img-responsive"></a></li>

                    <!-- ko foreach: navigation -->
                    <li data-bind="attr: { class: hasSubClass }">
                        <a data-bind="attr: { href: url, title: name }" class="">
